<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_bg"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/head_bg">

        <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:layout_alignParentLeft="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:text="@string/more"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="@color/common_bg"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/check_update_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_update"
                    android:layout_centerInParent="true"
                    android:textSize="18sp"
                    android:textColor="@color/default_font"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="9dp"/>
        </RelativeLayout>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="10dp"
                android:background="@color/split_line"/>

        <RelativeLayout
                android:id="@+id/about_us_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_us"
                    android:layout_centerInParent="true"
                    android:textSize="18sp"
                    android:textColor="@color/default_font"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="9dp"/>
        </RelativeLayout>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/split_line"/>

        <RelativeLayout
                android:id="@+id/feedback_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback"
                    android:layout_centerInParent="true"
                    android:textSize="18sp"
                    android:textColor="@color/default_font"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="9dp"/>
        </RelativeLayout>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="10dp"
                android:background="@color/split_line"/>

        <RelativeLayout
                android:id="@+id/clear_cache_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clear_cache"
                    android:layout_centerInParent="true"
                    android:textSize="18sp"
                    android:textColor="@color/default_font"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="9dp"/>
        </RelativeLayout>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/split_line"/>

        <RelativeLayout
                android:id="@+id/disclaimer_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disclaimer"
                    android:layout_centerInParent="true"
                    android:textSize="18sp"
                    android:textColor="@color/default_font"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="9dp"/>
        </RelativeLayout>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="10dp"
                android:background="@color/split_line"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/more_tab_hot_line_bg">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icons_mobile"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/more_hot_line"
                    android:layout_marginRight="9dp"/>

            <Button
                    android:id="@+id/more_hot_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hot_line"
                    android:layout_centerInParent="true"
                    android:textSize="18sp"
                    android:textColor="@color/high_light_font"
                    android:background="@color/more_tab_hot_line_bg"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/split_line"/>

    </LinearLayout>

</LinearLayout>
