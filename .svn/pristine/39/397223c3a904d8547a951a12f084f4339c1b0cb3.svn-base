<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/common_bg">

    <!--头部-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/head_bg">

        <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:layout_alignParentLeft="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="@string/my_attention_new_house"
                android:layout_centerInParent="true"/>
    </RelativeLayout>

    <TextView
            android:id="@+id/house_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="共有13个关注的新房"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/new_house_count"/>

    <ListView
            android:id="@+id/my_attention_new_house_list"
            android:divider="@color/split_line"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>