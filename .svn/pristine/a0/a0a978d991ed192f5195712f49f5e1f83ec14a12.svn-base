<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/map_detail_overlay_bg">
    <ImageView
            android:id="@+id/map_house_image"
            android:layout_width="194px"
            android:layout_height="194px"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:src="@drawable/map_house_bg"/>
    <TextView
            android:id="@+id/map_house_desc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/white"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:src="@drawable/tip_right"/>
</LinearLayout>