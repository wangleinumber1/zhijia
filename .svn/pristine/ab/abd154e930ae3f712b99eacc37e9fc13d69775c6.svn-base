<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/calculator_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:paddingLeft="15dp"
            android:src="@drawable/calculator_icons_1"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
        <TextView
                android:id="@+id/calculator_text_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="税费计算器"
                android:textColor="@color/default_font"
                />
        <TextView
                android:id="@+id/calculator_text_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="(根据面积、单价计算税费)"
                android:textColor="@color/font_desc"/>
    </LinearLayout>


</LinearLayout>