<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/common_bg">

    <!--头部-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/head_bg">

        <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:layout_alignParentLeft="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:text="@string/recommended_buy_house"
                android:layout_centerInParent="true"/>

        <TextView
                android:id="@+id/recommended_rules"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:background="@drawable/top_menu_button"
                android:text="@string/recommended_rules"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input"
                android:padding="5dp"
                android:orientation="vertical">

            <EditText
                    android:id="@+id/input_friend_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:hint="@string/input_friend_name_hint"
                    android:background="@drawable/input_underline"/>

            <EditText
                    android:id="@+id/input_friend_cellphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:inputType="phone"
                    android:hint="@string/input_friend_cellphone_hint"
                    android:background="@drawable/input_underline"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:orientation="vertical">
<!--
            <RelativeLayout
                    android:id="@+id/price_range_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/price_range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="16sp"
                        android:hint="@string/price_range_hint"
                        android:background="@drawable/input_underline"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:textSize="16sp"
                        android:hint="@string/please_select_with_right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>-->

            <RelativeLayout
                    android:id="@+id/intention_area_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/intention_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="16sp"
                        android:hint="@string/intention_area_hint"
                        android:background="@drawable/input_underline"/>

                <TextView
                        android:id="@+id/select_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:textSize="16sp"
                        android:hint="@string/please_select_with_right"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <EditText
                    android:id="@+id/input_intention_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:hint="@string/input_intention_house_hint"
                    android:background="@drawable/input_underline"/>
        </LinearLayout>

        <EditText
                android:id="@+id/intention_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:minLines="6"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:textSize="16sp"
                android:maxLength="100"
                android:hint="@string/input_intention_description_hint"
                android:background="@drawable/input"/>

        <TextView
                android:id="@+id/immediately_recommended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:gravity="center|center_vertical"
                android:layout_gravity="center|center_vertical"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="@string/immediately_recommended"
                android:background="@drawable/common_red_button"/>
    </LinearLayout>
</LinearLayout>