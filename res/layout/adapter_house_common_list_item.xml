<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/new_house_adapter_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/common_bg"
              android:orientation="horizontal">
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical">

        <ImageView
                android:id="@+id/adapter_house_image_one"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>


    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp">

    <TextView
                android:id="@+id/adapter_house_content_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/black"
                android:textSize="14sp"/>

        <TextView
                android:id="@+id/adapter_house_content_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/red"
                android:textSize="14sp"/>

        <TextView
                android:id="@+id/adapter_house_content_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_below="@+id/adapter_house_content_one"
                android:layout_alignParentLeft="true"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/adapter_house_content_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_below="@+id/adapter_house_content_three"
                android:layout_alignParentLeft="true"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/adapter_house_content_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adapter_house_content_four"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/item_action"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/item_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/get_privilege"
                android:textColor="@color/white"
                android:layout_alignBottom="@+id/adapter_house_content_five"
                android:background="@drawable/red_button_selector"
                android:layout_alignRight="@+id/adapter_house_content_two"/>
    </RelativeLayout>

</LinearLayout>