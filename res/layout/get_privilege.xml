<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/common_bg"
              android:orientation="vertical">

    <include layout="@layout/common_two_view_head"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/default_font"
                        android:text="@string/zhijia_privilege"/>

                <TextView
                        android:id="@+id/privilege_title"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="置家会员春季专享优惠"
                        android:textColor="@color/default_font"/>
            </LinearLayout>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/split_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/default_font"
                        android:text="@string/privilege_time_range"/>

                <TextView
                        android:id="@+id/privilege_time_range"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="14.4.1~14.6.1"
                        android:textColor="@color/default_font"/>
            </LinearLayout>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/split_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/default_font"
                        android:text="@string/privilege_choose"/>

                <RadioGroup
                        android:id="@+id/privilege_choose_radio_group"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_gravity="center_vertical"
                    android:background="@color/split_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:inputType="numberSigned"
                        android:gravity="right|center_vertical"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/default_font"
                        android:text="@string/buy_privilege_count"/>

                <EditText
                        android:id="@+id/buy_privilege_count"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:numeric="integer"
                        android:maxLength="3"
                        android:textSize="18sp"
                        android:layout_margin="5dp"
                        android:background="@drawable/input_underline"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/input">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                    <EditText
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:maxLength="12"
                            android:layout_margin="10dp"
                            android:hint="@string/input_name_hint"
                            android:background="@drawable/input_underline"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:orientation="horizontal">

                    <EditText
                            android:id="@+id/cellphone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_margin="10dp"
                            android:inputType="phone"
                            android:textSize="18sp"
                            android:background="@drawable/input_underline"
                            android:hint="@string/input_cellphone_hint"/>

                    <Button
                            android:id="@+id/get_mobile_code"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            android:textSize="12sp"
                            android:text="@string/send_message_authentication_code"
                            android:background="@drawable/common_bule_button"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:orientation="horizontal">

                    <EditText
                            android:id="@+id/message_authentication_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_margin="10dp"
                            android:textSize="18sp"
                            android:background="@drawable/input_underline"
                            android:hint="@string/input_message_authentication_code_hint"/>

                    <Button
                            android:id="@+id/submit"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            android:textSize="14sp"
                            android:text="@string/get_privilege"
                            android:background="@drawable/common_red_button"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>