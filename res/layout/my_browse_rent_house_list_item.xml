<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/common_bg"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/adapter_house_image_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/house"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp">

            <TextView
                    android:id="@+id/adapter_house_content_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="华丽国际"/>

            <TextView
                    android:id="@+id/adapter_house_content_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:text="2400元/月"/>

            <TextView
                    android:id="@+id/adapter_house_content_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_margin="3dp"
                    android:layout_below="@+id/adapter_house_content_one"
                    android:layout_alignParentLeft="true"
                    android:textSize="12sp"
                    android:textColor="@color/font_desc"
                    android:text="[桥东区]"/>

            <TextView
                    android:id="@+id/adapter_house_content_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="3dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/adapter_house_content_three"
                    android:textColor="@color/font_desc"
                    android:textSize="12sp"
                    android:text="24元/m²·天"/>

            <TextView
                    android:id="@+id/adapter_house_content_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_below="@+id/adapter_house_content_three"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="3dp"
                    android:paddingBottom="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/font_desc"
                    android:text="联盟路与中华大街交口"/>

            <TextView
                    android:id="@+id/item_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/adapter_house_content_five"
                    android:layout_below="@+id/adapter_house_content_four"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
					android:layout_marginBottom="5dp"
                    android:gravity="center|center_vertical"
                    android:textSize="14sp"
                    android:text="@string/favorites"
                    android:textColor="@color/white"
                    android:background="@drawable/red_button_selector"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>