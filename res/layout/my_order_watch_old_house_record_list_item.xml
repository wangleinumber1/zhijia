<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/common_bg"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/adapter_house_content_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="华丽国际"/>

        <TextView
                android:id="@+id/adapter_house_content_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="(100m² 3室2厅1卫 79.8万)"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/point_gray"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/default_font"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:text="@string/order_time"/>

        <TextView
                android:id="@+id/adapter_house_content_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/default_font"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:text="双休日，上午有空看房子。"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/point_gray"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/default_font"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:text="@string/order_desc"/>

        <TextView
                android:id="@+id/adapter_house_content_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/default_font"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:text="着急搬家，尽快安排看房，谢谢！"/>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp">

        <ImageView
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/point_gray"/>

        <TextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/point"
                android:gravity="center_vertical"
                android:textColor="@color/default_font"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:text="@string/apply_time"/>

        <TextView
                android:id="@+id/adapter_house_content_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/order_time"
                android:layout_toLeftOf="@+id/adapter_house_item_one_des_two"
                android:layout_marginLeft="5dp"
                android:textColor="@color/default_font"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="14sp"
                android:text="2014-04-23 18：30"/>

        <TextView
                android:id="@+id/adapter_house_item_one_des_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/tags_border"
                android:textSize="13sp"
                android:textColor="@color/red"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:text="@string/house_detail"/>
    </RelativeLayout>
</LinearLayout>